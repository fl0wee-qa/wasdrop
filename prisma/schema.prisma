generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum JobStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}

enum ActivityType {
  VIEW_GAME
  VIEW_NEWS
  WISHLIST_ADD
  WISHLIST_REMOVE
  ALERT_CREATE
  ALERT_DELETE
}

model User {
  id               String         @id @default(cuid())
  email            String?        @unique
  passwordHash     String?
  name             String?
  image            String?
  role             Role           @default(USER)
  preferredCountry String?        @default("US")
  marketingOptIn   Boolean        @default(false)
  steamId          String?        @unique
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  accounts      Account[]
  sessions      Session[]
  wishlistItems WishlistItem[]
  priceAlerts   PriceAlert[]
  auditLogs     AuditLog[]       @relation("AuditActor")
  activity      UserActivity[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deals     Deal[]
  snapshots PriceSnapshot[]
}

model Game {
  id               String         @id @default(cuid())
  title            String
  slug             String         @unique
  externalIdsJson  Json?
  description      String?
  releaseDate      DateTime?
  genresJson       Json?
  developer        String?
  publisher        String?
  systemReqMin     String?
  systemReqRec     String?
  steamAppId       String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  images        GameImage[]
  deals         Deal[]
  snapshots     PriceSnapshot[]
  wishlistItems WishlistItem[]
  priceAlerts   PriceAlert[]
  activities    UserActivity[]
}

model GameImage {
  id        String   @id @default(cuid())
  gameId    String
  url       String
  type      String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([gameId, type])
}

model Deal {
  id                 String   @id @default(cuid())
  gameId             String
  storeId            Int
  country            String
  currency           String
  priceCents         Int
  originalPriceCents Int
  discountPercent    Int
  url                String
  startAt            DateTime?
  endAt              DateTime?
  lastSeenAt         DateTime @default(now())

  game  Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([gameId, storeId, country])
  @@index([country, discountPercent])
  @@index([country, priceCents])
}

model PriceSnapshot {
  id                 String   @id @default(cuid())
  gameId             String
  storeId            Int
  country            String
  currency           String
  date               DateTime
  priceCents         Int
  originalPriceCents Int
  discountPercent    Int

  game  Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([gameId, storeId, country, date])
  @@index([gameId, country, date])
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  gameId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
}

model PriceAlert {
  id               String   @id @default(cuid())
  userId           String
  gameId           String
  targetPriceCents Int
  country          String
  currency         String
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([userId, isActive])
}

model NewsSource {
  id        String   @id @default(cuid())
  name      String
  feedUrl   String   @unique
  isEnabled Boolean  @default(true)
  category  String
  createdAt DateTime @default(now())

  articles NewsArticle[]
}

model NewsArticle {
  id             String   @id @default(cuid())
  title          String
  slug           String   @unique
  sourceId       String
  url            String   @unique
  imageUrl       String?
  publishedAt    DateTime
  category       String
  contentSnippet String?
  aiSummary      String?
  createdAt      DateTime @default(now())

  source NewsSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@index([publishedAt])
  @@index([category])
}

model AdminCuration {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String?
  itemsJson   Json
  createdAt   DateTime @default(now())
}

model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?
  action      String
  metadataJson Json?
  createdAt   DateTime @default(now())

  actor User? @relation("AuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([action, createdAt])
}

model JobRun {
  id         String    @id @default(cuid())
  jobName    String
  status     JobStatus @default(PENDING)
  startedAt  DateTime  @default(now())
  finishedAt DateTime?
  message    String?
  logsJson   Json?

  @@index([jobName, startedAt])
}

model UserActivity {
  id            String       @id @default(cuid())
  userId        String
  type          ActivityType
  gameId        String?
  newsArticleId String?
  metadataJson  Json?
  createdAt     DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game? @relation(fields: [gameId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
}
